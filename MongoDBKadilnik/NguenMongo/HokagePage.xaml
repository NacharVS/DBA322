<Page x:Class="NguenMongo.HokagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NguenMongo"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="HokagePage" Loaded="Page_Loaded" Background="OrangeRed">

    <StackPanel>
        <TextBox x:Name="datagrid" Height="300" IsReadOnly="True"/>
        <StackPanel Margin="10,10" Orientation="Horizontal">
        </StackPanel>
        <StackPanel Margin="10,10" Orientation="Horizontal">
            <Button x:Name="AddBtn" Content="Add" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Click="AddBtn_Click" />
            <Button x:Name="EditBtn" Content="Edit" Width="50"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" Click="EditBtn_Click" />
            <Button x:Name="DelBtn" Content="Delete" Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0" Click="DelBtn_Click" />
        </StackPanel>
    </StackPanel>
    
</Page>
